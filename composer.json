{
    "name": "rdss/create-dependency-pr-action",
    "description": "create pullrequests for depending repositories",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "IT-Verticals",
            "email": "dev@rdss.it"
        }
    ],
    "require": {
        "symfony/console": "^5.4",
        "private-packagist/api-client": "^1.28",
        "guzzlehttp/guzzle": "^7.4",
        "php-http/guzzle7-adapter": "^1.0"
    },
    "require-dev": {
        "zooroyal/coding-standard": "^3.13"
    },
    "config": {
        "allow-plugins": {
            "mindplay/composer-locator": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    }
}
